{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "composite": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./types", "node_modules/@types"],
  },
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules", "types"]
}
